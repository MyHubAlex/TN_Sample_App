header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "TN Sample App", root_path, id: "logo"
      nav
        ul.nav.pull-right
          li= link_to "All questions", root_path
          - if signed_in?
            li#fat-menu.dropdown
              a.dropdown-toggle data-toggle="dropdown" href="#" Account
              ul.dropdown-menu
                li= link_to "Ask question now!", new_question_path
                li= link_to "Preferences", edit_user_registration_path
                li= link_to "Sign out", destroy_user_session_path
          - else
            li= link_to "Sign in!", new_user_session_path
            li= link_to "Sign up now!", new_user_registration_path